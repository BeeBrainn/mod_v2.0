- if @current_user
  = form_for @order do |f|
    -if @order.errors.any?
      #error_explanation
        %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
        %ul
          - @order.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.hidden_field :user_id
    .field
      %p Организация:
      = @current_user.company_name
    .field
      = f.label "Резерв"
      = f.check_box :reserv_flag
    .actions
      = f.submit 'Разместить заказ'

-else
  = form_for @order do |f|
    -if @order.errors.any?
      #error_explanation
        %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
        %ul
          - @order.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.hidden_field :user_id
    .field
      = f.text_field :name, placeholder: "Имя", class: "span12"
    .field
      = f.email_field :email, placeholder: "e-mail", class: "span12"
    .field
      = f.text_area :details, placeholder: "Детали (можете указать здесь контактный телефон и прочую информацию)", class: "span12", rows: 6
    .actions
      = f.submit 'Разместить заказ'
